<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %><br>
  <%= @post.created_at.strftime('%d, %b %Y') %>
  <br>Post by <%= @post.user.email %>
</p>
<% if (user_signed_in? && (current_user.id == @post.user_id)) %>
	<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %> 
<%= link_to 'Back', posts_path %>
